# Enterprise Fullstack - Production Environment
# Shared infrastructure configuration for Web and API templates

# Environment
ENV=prod
ASPNETCORE_ENVIRONMENT=Production

# Database Configuration (shared by both Web and API)
DB_USER=app
DB_PASS=prod_secure_password_change_me
POSTGRES_DB=enterprisefullstack_prod
POSTGRES_PORT=5434

# Redis Configuration
REDIS_PORT=6381

# Message Queue Configuration
RABBITMQ_USER=app
RABBITMQ_PASS=prod_secure_password_change_me
RABBITMQ_PORT=5674
RABBITMQ_MANAGEMENT_PORT=15674

# Observability Configuration
OTEL_GRPC_PORT=4319
OTEL_HTTP_PORT=4320
JAEGER_UI_PORT=16688
JAEGER_OTLP_GRPC_PORT=14319
SEQ_PORT=5343

# Development Tools (Limited in Production)
PGADMIN_PORT=5052

# Application Ports (coordinated to avoid conflicts)
UI_PORT=3002
API_PORT=5002

# Logging Configuration
LOGGING_LEVEL=Warning
SEQ_API_KEY=production_api_key_configure_me

# Security Configuration (Production)
ENABLE_HTTPS=true
AUTH_MODE=JWT
AUTH_AUTHORITY=https://auth.example.com
AUTH_AUDIENCE=enterprisefullstack-prod

# Connection Strings (for applications to use)
CONNECTIONSTRING_DEFAULT=Host=localhost;Port=5434;Database=enterprisefullstack_prod;Username=app;Password=prod_secure_password_change_me
CONNECTIONSTRING_REDIS=localhost:6381
CONNECTIONSTRING_RABBITMQ=amqp://app:prod_secure_password_change_me@localhost:5674

# OpenTelemetry Configuration
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4319
OTEL_SERVICE_NAME=enterprisefullstack
OTEL_RESOURCE_ATTRIBUTES=service.namespace=enterprise,deployment.environment=production
