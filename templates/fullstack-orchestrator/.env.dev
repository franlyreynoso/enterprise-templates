# Enterprise Fullstack - Development Environment
# Shared infrastructure configuration for Web and API templates

# Environment
ENV=dev
ASPNETCORE_ENVIRONMENT=Development

# Database Configuration (shared by both Web and API)
DB_USER=app
DB_PASS=app
POSTGRES_DB=enterprisefullstack_dev
POSTGRES_PORT=5432

# Redis Configuration
REDIS_PORT=6379

# Message Queue Configuration
RABBITMQ_USER=app
RABBITMQ_PASS=app
RABBITMQ_PORT=5672
RABBITMQ_MANAGEMENT_PORT=15672

# Observability Configuration
OTEL_GRPC_PORT=4317
OTEL_HTTP_PORT=4318
JAEGER_UI_PORT=16686
JAEGER_OTLP_GRPC_PORT=14317
SEQ_PORT=5341

# Development Tools
PGADMIN_PORT=5050
MAILHOG_SMTP_PORT=1025
MAILHOG_UI_PORT=8025

# Application Ports (coordinated to avoid conflicts)
WEB_HTTP_PORT=3000
WEB_HTTPS_PORT=3001
API_HTTP_PORT=5000
API_HTTPS_PORT=5001
API_URL=http://localhost:5000

# Logging Configuration
LOGGING_LEVEL=Debug
SEQ_API_KEY=

# Security Configuration (Development)
ENABLE_HTTPS=false
AUTH_MODE=Development
CERTIFICATE_PASSWORD=

# Connection Strings (for applications to use)
CONNECTIONSTRING_DEFAULT=Host=localhost;Port=5432;Database=enterprisefullstack_dev;Username=app;Password=app
CONNECTIONSTRING_REDIS=localhost:6379
CONNECTIONSTRING_RABBITMQ=amqp://app:app@localhost:5672

# OpenTelemetry Configuration
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4317
OTEL_SERVICE_NAME=enterprisefullstack
OTEL_RESOURCE_ATTRIBUTES=service.namespace=enterprise,deployment.environment=development
