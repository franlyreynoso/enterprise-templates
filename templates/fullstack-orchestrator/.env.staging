# Enterprise Fullstack - Staging Environment
# Shared infrastructure configuration for Web and API templates

# Environment
ENV=staging
ASPNETCORE_ENVIRONMENT=Staging

# Database Configuration (shared by both Web and API)
DB_USER=app
DB_PASS=app_staging_secure
POSTGRES_DB=enterprisefullstack_staging
POSTGRES_PORT=5433

# Redis Configuration
REDIS_PORT=6380

# Message Queue Configuration
RABBITMQ_USER=app
RABBITMQ_PASS=app_staging_secure
RABBITMQ_PORT=5673
RABBITMQ_MANAGEMENT_PORT=15673

# Observability Configuration
OTEL_GRPC_PORT=4318
OTEL_HTTP_PORT=4319
JAEGER_UI_PORT=16687
JAEGER_OTLP_GRPC_PORT=14318
SEQ_PORT=5342

# Development Tools
PGADMIN_PORT=5051
MAILHOG_SMTP_PORT=1026
MAILHOG_UI_PORT=8026

# Application Ports (coordinated to avoid conflicts)
UI_PORT=3001
API_PORT=5001

# Logging Configuration
LOGGING_LEVEL=Information
SEQ_API_KEY=

# Security Configuration (Staging)
ENABLE_HTTPS=true
AUTH_MODE=JWT
AUTH_AUTHORITY=https://staging-auth.example.com
AUTH_AUDIENCE=enterprisefullstack-staging

# Connection Strings (for applications to use)
CONNECTIONSTRING_DEFAULT=Host=localhost;Port=5433;Database=enterprisefullstack_staging;Username=app;Password=app_staging_secure
CONNECTIONSTRING_REDIS=localhost:6380
CONNECTIONSTRING_RABBITMQ=amqp://app:app_staging_secure@localhost:5673

# OpenTelemetry Configuration
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4318
OTEL_SERVICE_NAME=enterprisefullstack
OTEL_RESOURCE_ATTRIBUTES=service.namespace=enterprise,deployment.environment=staging
