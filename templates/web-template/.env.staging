# Enterprise UI Template - Staging Environment
# Exact backend template variable naming for perfect integration

# Environment
ENV=staging
ASPNETCORE_ENVIRONMENT=Staging

# Database Configuration (matches backend exactly - shared service)
DB_USER=app
DB_PASS=app_staging_secure
POSTGRES_DB=enterprisetemplate_staging
POSTGRES_PORT=5433

# Application Ports (UI uses different ports to avoid API conflicts)
UI_HTTP_PORT=3001
UI_HTTPS_PORT=3101

# Observability Configuration (matches backend exactly - shared services)
OTEL_GRPC_PORT=4318
OTEL_HTTP_PORT=4319
JAEGER_UI_PORT=16687
JAEGER_GRPC_PORT=14251
JAEGER_THRIFT_PORT=14269
JAEGER_ZIPKIN_PORT=9412
SEQ_PORT=5342

# Message Queue Configuration (matches backend exactly - shared service)
RABBITMQ_USER=app
RABBITMQ_PASS=app_staging_secure
RABBITMQ_PORT=5673
RABBITMQ_MANAGEMENT_PORT=15673

# Cache Configuration (matches backend exactly - shared service)
REDIS_PORT=6380

# Development Tools (matches backend exactly)
PGADMIN_PORT=5051
MAILHOG_SMTP_PORT=1026
MAILHOG_UI_PORT=8026

# Connection Strings (for UI application to use shared services)
CONNECTIONSTRING_DEFAULT=Host=localhost;Port=5433;Database=enterprisetemplate_staging;Username=app;Password=app_staging_secure
CONNECTIONSTRING_REDIS=localhost:6380
CONNECTIONSTRING_RABBITMQ=amqp://app:app_staging_secure@localhost:5673

# OpenTelemetry Configuration (matches backend exactly)
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4318
OTEL_SERVICE_NAME=enterprise-ui
OTEL_RESOURCE_ATTRIBUTES=service.namespace=enterprise,deployment.environment=staging

# Security Configuration (Staging)
ENABLE_HTTPS=true
AUTH_MODE=JWT
AUTH_AUTHORITY=https://staging-auth.example.com
AUTH_AUDIENCE=enterprise-ui-staging
