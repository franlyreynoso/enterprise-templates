# Enterprise UI Template - Environment Variables
# Copy this file to .env and customize for your environment

# ==============================================
# Development Environment
# ==============================================

# Application Environment
ASPNETCORE_ENVIRONMENT=Development
DOTNET_ENVIRONMENT=Development

# ==============================================
# Authentication Configuration
# ==============================================

# OIDC/OAuth2 Settings
AUTH_CLIENT_SECRET=your-dev-client-secret-here
AUTH_AUTHORITY=https://your-identity-provider.example.com
AUTH_CLIENT_ID=ui-client-dev

# ==============================================
# Backend Integration
# ==============================================

# Backend API Settings
BACKEND_IMAGE=your-registry/enterprise-backend:latest
BACKEND_API_URL=https://localhost:8001
BACKEND_HEALTH_CHECK_URL=https://localhost:8001/health

# ==============================================
# Database Configuration (PostgreSQL - matches backend)
# ==============================================

# PostgreSQL (Primary - matches backend template)
DB_CONNECTION_STRING=Host=localhost;Port=5432;Database=enterpriseui_dev;Username=app;Password=app
POSTGRES_DB=enterpriseui_dev
POSTGRES_USER=app
POSTGRES_PASSWORD=app

# Database naming pattern (will be replaced by template):
# MyCompany.OrderUI -> mycompany_orderui_dev/staging/prod
# ProjectX.UI -> projectx_ui_dev/staging/prod

# SQL Server (Alternative - if backend uses SQL Server)
# DB_CONNECTION_STRING=Server=localhost,1433;Database=Enterprise;User Id=sa;Password=DevPassword123!;TrustServerCertificate=true
# DB_SA_PASSWORD=DevPassword123!

# ==============================================
# Observability & Monitoring (Matches Backend Stack)
# ==============================================

# OpenTelemetry & Jaeger (Tracing)
OTLP_ENDPOINT=http://localhost:4317
JAEGER_ENDPOINT=http://localhost:14268/api/traces
JAEGER_UI_PORT=16686

# Seq (Centralized Logging)
SEQ_URL=http://localhost:5341
SEQ_API_KEY=your-seq-api-key
SEQ_PORT=5341

# Prometheus & Grafana (Metrics & Dashboards)
PROMETHEUS_URL=http://localhost:9090
GRAFANA_ADMIN_PASSWORD=admin123
GRAFANA_PORT=3000

# Application Insights (Azure - Optional)
APPLICATIONINSIGHTS_CONNECTION_STRING=your-app-insights-connection-string

# ==============================================
# Feature Flags
# ==============================================

# Configuration-based feature flags
FEATURE_NEW_NAV=true
FEATURE_ADVANCED_SEARCH=false
FEATURE_BETA_DASHBOARD=false

# External feature flag provider (optional)
FEATURE_FLAG_SERVICE_URL=https://your-feature-flag-service.example.com
FEATURE_FLAG_SERVICE_KEY=your-service-key

# ==============================================
# Security Configuration
# ==============================================

# Content Security Policy
CSP_ADDITIONAL_SOURCES="'unsafe-inline' 'unsafe-eval'"
CSP_REPORT_URI=https://your-csp-report-endpoint.example.com

# API Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=100
RATE_LIMIT_BURST_SIZE=20

# ==============================================
# External Services
# ==============================================

# Azure Key Vault (if using)
AZURE_KEY_VAULT_URL=https://your-keyvault.vault.azure.net/

# Redis Cache (if using)
REDIS_CONNECTION_STRING=localhost:6379

# Email Service
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USERNAME=your-smtp-username
SMTP_PASSWORD=your-smtp-password

# ==============================================
# Development Tools
# ==============================================

# Hot Reload
DOTNET_WATCH_RESTART_ON_RUDE_EDIT=true
ASPNETCORE_HOTRELOAD_ENABLED=true

# Docker Development
COMPOSE_PROJECT_NAME=enterprise-ui
DOCKER_BUILDKIT=1

# ==============================================
# Production Overrides
# ==============================================
# Uncomment and customize these for production deployments:

# ASPNETCORE_ENVIRONMENT=Production
# AUTH_CLIENT_SECRET=your-production-client-secret
# AUTH_AUTHORITY=https://your-production-identity-provider.example.com
# DB_CONNECTION_STRING=Server=prod-server;Database=Enterprise;User Id=prod-user;Password=secure-password;Encrypt=true
# OTLP_ENDPOINT=https://your-production-otlp-endpoint.example.com:4317
# GRAFANA_ADMIN_PASSWORD=secure-production-password