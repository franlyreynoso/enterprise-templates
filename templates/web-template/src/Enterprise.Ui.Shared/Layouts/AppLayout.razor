@using MudBlazor

<MudLayout>
  <MudAppBar Elevation="1">
    <MudText Typo="Typo.h6">Enterprise UI</MudText>
    <MudSpacer/>
    <MudIconButton Icon="@Icons.Material.Filled.AccountCircle" />
  </MudAppBar>

  <MudDrawer Open="true" ClipMode="DrawerClipMode.Never" Variant="DrawerVariant.Mini">
    <MudNavMenu>
      <MudNavLink Href="/" Icon="@Icons.Material.Filled.Dashboard">Dashboard</MudNavLink>
      <MudNavLink Href="/health" Icon="@Icons.Material.Filled.MonitorHeart">Health</MudNavLink>
    </MudNavMenu>
  </MudDrawer>

  <MudMainContent Class="p-4">
    <Enterprise.Ui.Shared.Components.ErrorBoundary>
      @ChildContent
    </Enterprise.Ui.Shared.Components.ErrorBoundary>
  </MudMainContent>
</MudLayout>

@code {
  [Parameter] public RenderFragment? ChildContent { get; set; }
}
