# Enterprise UI Template - Production Environment
# Exact backend template variable naming for perfect integration

# Environment
ENV=prod
ASPNETCORE_ENVIRONMENT=Production

# Database Configuration (matches backend exactly - shared service)
DB_USER=app
DB_PASS=prod_secure_password_change_me
POSTGRES_DB=enterprisetemplate_prod
POSTGRES_PORT=5434

# Application Ports (UI uses different ports to avoid API conflicts)
UI_HTTP_PORT=3002
UI_HTTPS_PORT=3102

# Observability Configuration (matches backend exactly - shared services)
OTEL_GRPC_PORT=4319
OTEL_HTTP_PORT=4320
JAEGER_UI_PORT=16688
SEQ_PORT=5343

# Message Queue Configuration (matches backend exactly - shared service)
RABBITMQ_USER=app
RABBITMQ_PASS=prod_secure_password_change_me
RABBITMQ_PORT=5674
RABBITMQ_MANAGEMENT_PORT=15674

# Cache Configuration (matches backend exactly - shared service)
REDIS_PORT=6381

# Development Tools (Limited in Production)
PGADMIN_PORT=5052

# Connection Strings (for UI application to use shared services)
CONNECTIONSTRING_DEFAULT=Host=localhost;Port=5434;Database=enterprisetemplate_prod;Username=app;Password=prod_secure_password_change_me
CONNECTIONSTRING_REDIS=localhost:6381
CONNECTIONSTRING_RABBITMQ=amqp://app:prod_secure_password_change_me@localhost:5674

# OpenTelemetry Configuration (matches backend exactly)
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4319
OTEL_SERVICE_NAME=enterprise-ui
OTEL_RESOURCE_ATTRIBUTES=service.namespace=enterprise,deployment.environment=production

# Security Configuration (Production)
ENABLE_HTTPS=true
AUTH_MODE=JWT
AUTH_AUTHORITY=https://auth.example.com
AUTH_AUDIENCE=enterprise-ui-prod

# Logging Configuration
LOGGING_LEVEL=Warning
SEQ_API_KEY=production_api_key_configure_me