# Enterprise UI Template - Development Environment
# Exact backend template variable naming for perfect integration

# Environment
ENV=dev
ASPNETCORE_ENVIRONMENT=Development

# Database Configuration (matches backend exactly - shared service)
DB_USER=app
DB_PASS=app
POSTGRES_DB=enterprisetemplate_dev
POSTGRES_PORT=5432

# Application Ports (UI uses different ports to avoid API conflicts)
UI_HTTP_PORT=3000
UI_HTTPS_PORT=3100

# Observability Configuration (matches backend exactly - shared services)
OTEL_GRPC_PORT=4317
OTEL_HTTP_PORT=4318
JAEGER_UI_PORT=16686
JAEGER_GRPC_PORT=14250
JAEGER_THRIFT_PORT=14268
JAEGER_ZIPKIN_PORT=9411
SEQ_PORT=5341

# Message Queue Configuration (matches backend exactly - shared service)
RABBITMQ_USER=app
RABBITMQ_PASS=app
RABBITMQ_PORT=5672
RABBITMQ_MANAGEMENT_PORT=15672

# Cache Configuration (matches backend exactly - shared service)
REDIS_PORT=6379

# Development Tools (matches backend exactly)
PGADMIN_PORT=5050
MAILHOG_SMTP_PORT=1025
MAILHOG_UI_PORT=8025

# Connection Strings (for UI application to use shared services)
CONNECTIONSTRING_DEFAULT=Host=localhost;Port=5432;Database=enterprisetemplate_dev;Username=app;Password=app
CONNECTIONSTRING_REDIS=localhost:6379
CONNECTIONSTRING_RABBITMQ=amqp://app:app@localhost:5672

# OpenTelemetry Configuration (matches backend exactly)
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4317
OTEL_SERVICE_NAME=enterprise-ui
OTEL_RESOURCE_ATTRIBUTES=service.namespace=enterprise,deployment.environment=development

# Security Configuration (Development)
ENABLE_HTTPS=false
AUTH_MODE=Development